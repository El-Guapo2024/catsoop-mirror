pipeline {
    agent { dockerfile {
                filename '.dockerfile.build'
                args '-u root'
           } }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install') {
            steps {
                sh 'make install'
            }
        }
        stage('Test') {
            steps {
                sh 'sudo -u catsoop make test'
            }
        }
        stage('Style') {
            steps {
                sh 'black --check --exclude catsoop/__QTYPES__/pythoncode/__SANDBOXES__/_template.py .'
            }
        }
    }
}
